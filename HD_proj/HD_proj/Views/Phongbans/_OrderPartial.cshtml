@model Phongban
    <div class="modal fade p-0" id="order-modal ">
        <div class="modal-lg modal-dialog ">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="text-danger font-weight-bold text-uppercase">Chỉnh sửa/ thêm mới phòng ban</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <form asp-action="Create">
                    <div class="modal-body p-0">

                        <div class=" col-12 ml-auto mr-auto container">
                            <div class="row pl-2 mt-2">
                                <div class="col-12">
                                    <label asp-for="Ten" class="control-label"></label>
                                    <input id="DepartmentName" asp-for="Ten" required class="form-control" />
                                    <span asp-validation-for="Ten" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row pl-2 mt-2">
                                <div class="col-12">
                                    <label asp-for="Cap" class="control-label"></label>
                                    <input id="DepartmentName" asp-for="Cap" required class="form-control" />
                                    <span asp-validation-for="Cap" class="text-danger"></span>
                                </div>
                            </div>
                            <input type="hidden" name="oldCode" value="@(Model.Ma == null ? "" : Model.Ma)" />
                            @if (Model.Id != Guid.Empty)
                            {
                                <div class="row pl-2 mt-2">
                                    <div class="col-12">
                                        <label asp-for="Ma" class="control-label"></label>
                                        <input id="DepartmentCode" readonly asp-for="Ma" class="form-control" />
                                        <span asp-validation-for="Ma" class="text-danger"></span>
                                    </div>
                                </div>
                            }
                            else
                            {

                            }

                            <div class="row pl-2 mt-2 mt-2">
                                <div class="col-12">
                                    <label class="control-label">Mã vị trí quản lý cha</label>
                                    @if (ViewBag.Father != "")
                                    {
                                        <input readonly id="fatherid" asp-for="MaPhongbanCha" required class="form-control" value="@ViewBag.Father" />
                                    }
                                    else
                                    {
                                        <input id="fatherid" asp-for="MaPhongbanCha" required class="form-control" value="@Model.MaPhongbanCha" />
                                    }
                                </div>
                            </div>
                            <div class="row pl-2 mt-2">
                                <div class="col-12">
                                    <label asp-for="Ma" class="control-label text-danger"> Mã phòng ban tự sinh sau khi tạo</label>
                                </div>
                            </div>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="container">
                            @if (Model.UpdateBy != null)
                            {
                                <span class="font-weight-bold">Cập nhật lần cuối vào: </span>
                                <span class="font-weight-bold text-info">@Model.DateUpdate.ToString("dd-MM-yyyy HH:mm")</span>
                                <span class="font-weight-bold"> - Bởi: </span>
                                <span class="font-weight-bold text-danger">@Model.UpdateBy</span>
                            }
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Thoát</button>
                        <input type="submit" class="btn btn-primary" value="Lưu"  />

                    </div>
                </form>
            </div>
        </div>
    </div>
